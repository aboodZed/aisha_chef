<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchThemeOverlay" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="dialog_animation_bottom_top">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top</item>
    </style>

    <style name="CustomCheckoutTheme" parent="Theme.Checkout.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="headerBackground">@color/colorAccent</item>
    </style>
</resources>
