<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webapp.aisha.feture.order.viewOrder.ViewOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/medium_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_order_placed"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="@string/order_place"
                    android:textColor="@color/black"
                    android:textSize="@dimen/little_text" />

                <TextView
                    android:id="@+id/tv_order_place_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/little_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_preparing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_order_preparing"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="@string/preparing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/little_text" />

                <TextView
                    android:id="@+id/tv_order_preparing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/little_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_ready"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_order_ready"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="@string/order_ready"
                    android:textColor="@color/black"
                    android:textSize="@dimen/little_text" />

                <TextView
                    android:id="@+id/tv_order_ready_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/little_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_on_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_order_on_way"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="@string/on_way"
                    android:textColor="@color/black"
                    android:textSize="@dimen/little_text" />

                <TextView
                    android:id="@+id/tv_order_on_way_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/little_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_order_delivered"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="@string/delivered"
                    android:textColor="@color/black"
                    android:textSize="@dimen/little_text" />

                <TextView
                    android:id="@+id/tv_order_delivered_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/little_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:orientation="vertical"
            android:paddingStart="@dimen/medium_padding"
            android:paddingEnd="@dimen/medium_padding">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_datetime_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tv_datetime_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/medium_padding"
            android:layout_marginEnd="@dimen/medium_padding"
            android:background="@drawable/white_button"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding">

            <TextView
                android:id="@+id/tv_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_receiver_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:background="@drawable/dash_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/order_items"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/qnt"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="@string/amount"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:background="@drawable/dash_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rate"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/sub_total"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tv_sub_total"
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_text"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rate"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/delivery"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tv_delivery"
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_text"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rate"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/taxes"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tv_taxes"
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_text"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rate"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/app_proportion"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tv_app_proportion"
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_text"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rate"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/total"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_text"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rate"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/pay_method"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="@dimen/alpha_size"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_text"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_padding"
            android:background="@drawable/white_button"
            android:padding="@dimen/small_padding">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_client_avatar"
                android:layout_width="@dimen/margin"
                android:layout_height="@dimen/margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text"
                app:layout_constraintStart_toEndOf="@+id/iv_client_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_client_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:textSize="@dimen/small_text"
                app:layout_constraintStart_toEndOf="@+id/iv_client_avatar"
                app:layout_constraintTop_toBottomOf="@+id/tv_client_name" />

            <ImageView
                android:id="@+id/iv_open_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:src="@drawable/ic_chat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ready"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_padding"
                android:layout_weight="1"
                android:background="@drawable/yellow_button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:foreground="?selectableItemBackground"
                android:text="@string/ready"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_on_way"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="1"
                android:background="@drawable/gray_button"
                android:backgroundTint="@color/gray"
                android:foreground="?selectableItemBackground"
                android:text="@string/on_way"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>